{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noResolve": true,
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "node_modules/@types/*/*.d.ts",
    "node_modules/electron/**/*.d.ts",
    "node_modules/electron-updater/out/*.d.ts",
    "node_modules/electron-builder-http/out/*.d.ts",
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
